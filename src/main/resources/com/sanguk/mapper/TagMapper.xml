<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sanguk.mapper.TagMapper">




	

    <insert id="registerTag">
		INSERT IGNORE INTO TAGS
		 	(articleid, tag)
		values
			(#{articleid},#{tag})
    </insert>

		<delete id="deleteTag">
			DELETE
			FROM
				TAGS
			WHERE 
				articleid = #{articleid}
		</delete>
    <select id="getTagListById" resultType="com.sanguk.domain.TagVO">
		SELECT 
			articleid, tag
		FROM
			TAGS
		WHERE articleid = #{id}
	</select>
	
</mapper>